upstream <%= ENV['APP_NAME'] %>_backend {
    server unix:/srv/<%= ENV['APP_NAME'] %>/shared/pids/unicorn.socket fail_timeout=0;
}

server {
    server_name <%= [ENV['APP_NAME'], `hostname -d`.chomp].join('.') %>;

    root /srv/<%= ENV['APP_NAME'] %>/current/public;

    access_log /srv/<%= ENV['APP_NAME'] %>/shared/log/nginx_access.log;
    error_log /srv/<%= ENV['APP_NAME'] %>/shared/log/nginx_error.log;

    location / {
        try_files $uri $uri/index.html $uri.html @backend;
    }

    location @backend {
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        proxy_redirect off;

        proxy_pass http://<%= ENV['APP_NAME'] %>_backend;
    }
}
